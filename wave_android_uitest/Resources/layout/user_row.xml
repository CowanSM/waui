<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_row_root">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/Icon" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_xp_frame"
        android:layout_toRightOf="@id/user_row_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dip"
        android:layout_marginLeft="5dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_row_xp_image"
            android:src="@drawable/whiteCircle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_row_xp_text"
            android:text="22"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_buttons"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="5dip"
        android:visibility="invisible">
        <ImageView
            android:src="@drawable/CheckMark"
            android:id="@+id/user_row_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip" />
        <ImageView
            android:src="@drawable/XMark"
            android:id="@+id/user_row_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_name"
        android:layout_toRightOf="@id/user_row_xp_frame"
        android:text="Oscar Bluth"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/user_row_buttons"
        android:layout_centerVertical="true"
        android:padding="7dip"
        android:textColor="@android:color/white" />
</RelativeLayout>