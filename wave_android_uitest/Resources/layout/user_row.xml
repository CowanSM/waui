<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_row_root">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/Icon" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_xp_frame"
        android:layout_toRightOf="@id/user_row_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dip"
        android:layout_marginLeft="5dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_row_xp_image"
            android:src="@drawable/whiteCircle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_row_xp_text"
            android:text="22"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_name"
        android:layout_toRightOf="@id/user_row_xp_frame"
        android:text="Oscar Bluth"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_row_check"
        android:layout_toRightOf="@id/user_row_name"
        android:layout_centerVertical="true" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>